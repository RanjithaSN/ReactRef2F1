{
    "fields": [
        {
            "password": {
                "rules": [
                    {
                        "description": {
                            "de-DE": "Großbuchstaben",
                            "en-GB": "Uppercase",
                            "fr-FR": "Majuscule",
                            "nl-NL": "Hoofdletter",
                            "es-MX": "Mayúsculas",
                            "pt-BR": "Maiúsculas",
                            "default": "Uppercase"
                        },
                        "name": "minLatinUppercase",
                        "regex": ".*[A-Z].*"
                    },
                    {
                        "description": {
                            "de-DE": "Kleinbuchstaben",
                            "en-GB": "Lowercase",
                            "fr-FR": "Minuscule",
                            "nl-NL": "Kleine letter",
                            "es-MX": "Minúsculas",
                            "pt-BR": "Minúsculas",
                            "default": "Lowercase"
                        },
                        "name": "minLatinLowercase",
                        "regex": ".*[a-z].*"
                    },
                    {
                        "description": {
                            "de-DE": "Zahl",
                            "en-GB": "Number",
                            "fr-FR": "Chiffre",
                            "nl-NL": "Cijfer",
                            "es-MX": "Número",
                            "pt-BR": "Número",
                            "default": "Number"
                        },
                        "name": "minDigit",
                        "regex": ".*[0-9].*"
                    },
                    {
                        "description": {
                            "de-DE": "8-30 Zeichen",
                            "en-GB": "8-30 characters",
                            "fr-FR": "Entre 8 et 30 charactères",
                            "nl-NL": "8-30 tekens",
                            "es-MX": "8-30 caracteres",
                            "pt-BR": "8-30 caracteres",
                            "default": "8-30 characters"
                        },
                        "name": "minMaxCharacter",
                        "regex": "^(.){8,30}$"
                    },
                    {
                        "description": {
                            "de-DE": "!, @, #, $, %, ^, &, +, =, - sind zulässig",
                            "en-GB": "Any of !, @, #, %, ^, &, +, =, -",
                            "fr-FR": "L'un des symboles suivants !, @, #, $, %, ^, &, +, =, -",
                            "nl-NL": "Eén van !, @, #, $, %, ^, &, +, =, -",
                            "es-MX": "Cualquiera de entre !, @, #, $, %, ^, &, +, =, -",
                            "pt-BR": "Qualquer de !, @, #, $, %, ^, &, +, =, -",
                            "default": "Any of !, @, #, %, ^, &, +, =, -"
                        },
                        "name": "minSymbol",
                        "regex": ".*[!@#$%^&+=-].*"
                    }
                ]
            }
        }
    ]
  }